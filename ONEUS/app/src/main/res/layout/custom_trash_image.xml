<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_trash"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundImage">
            </com.google.android.material.imageview.ShapeableImageView>

            <ImageButton
                android:id="@+id/delBtn"
                android:layout_width="30dp"
                android:src="@drawable/icon_delete_01"
                android:backgroundTint="@color/black"
                android:background="@drawable/circle_textview"
                app:layout_constraintRight_toRightOf="@id/image_trash"
                app:layout_constraintTop_toTopOf="@id/image_trash"
                android:layout_height="30dp">
            </ImageButton>

            <CheckBox
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/itemIMGChoose"
                android:gravity="center"
                android:layout_width="30dp"
                android:buttonTint="@color/white"
                android:button="@drawable/custom_checkbox"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:layout_constraintLeft_toLeftOf="@id/image_trash"
                app:layout_constraintTop_toTopOf="@id/image_trash"
                android:layout_height="30dp"
                tools:ignore="MissingConstraints">
            </CheckBox>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>