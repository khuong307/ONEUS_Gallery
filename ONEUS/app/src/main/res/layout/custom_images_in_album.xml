<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:id="@+id/listImages"
    android:paddingHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_in_album"
                android:background="@null"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundImage"
                tools:ignore="MissingConstraints">
            </com.google.android.material.imageview.ShapeableImageView>

            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/editBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_edit"
                android:background="@drawable/circle_edit_pencil_image"
                app:layout_constraintRight_toRightOf="@id/image_in_album"
                app:layout_constraintTop_toTopOf="@id/image_in_album"
                tools:ignore="MissingConstraints">
            </ImageButton>
            <RadioButton
                android:layout_margin="5dp"
                android:id="@+id/itemIMGChoose"
                android:layout_width="30dp"
                android:scaleX="1"
                android:scaleY="1"
                app:layout_constraintTop_toTopOf="@id/image_in_album"
                android:layout_height="30dp"
                tools:ignore="MissingConstraints">
            </RadioButton>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>