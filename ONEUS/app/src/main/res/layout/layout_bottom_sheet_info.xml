<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/bottomSheetInfo"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bottom_sheet_info"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/icon_edit"
            android:background="@drawable/custom_round_button"
            android:backgroundTint="@color/black"
            android:layout_height="30dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Edit Image"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/icielbccubano"
            android:textSize="15dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/icon_play"
            android:background="@drawable/custom_round_button"
            android:backgroundTint="@color/black"
            android:layout_height="30dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Run Slideshow"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/icielbccubano"
            android:textSize="15dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="33dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/double_click_icon"
            android:layout_height="33dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Double Tap To View Detail"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/icielbccubano"
            android:textSize="15dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="33dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/icon_press"
            android:layout_height="33dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Hold To Choose Image"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/icielbccubano"
            android:textSize="15dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>