<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Delete Album"
        android:gravity="center"
        android:textColor="@color/green_deep"
        android:textSize="25dp"
        android:fontFamily="@font/icielbccubano" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            app:shapeAppearanceOverlay="@style/RoundImage"
            android:src="@drawable/test"
            android:scaleType="centerCrop"
            android:id="@+id/delThumbnail"
            android:layout_height="100dp">
        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:id="@+id/delAlbumName"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/icielbccubano"
            android:text="Album Name"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/txvDeleteAlbum"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="This feature can not be undone!"
        android:textAlignment="center"
        android:textColor="@color/red_deep"
        android:fontFamily="@font/icielbccubano"/>

</LinearLayout>