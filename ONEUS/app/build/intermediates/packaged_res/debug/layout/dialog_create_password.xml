<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Create Album's Password"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/icielbccubano"
        android:textColor="@color/green_deep"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/txtPassword"
        android:padding="20dp"
        android:textSize="20dp"
        android:fontFamily="@font/icielbccubano"
        android:textAlignment="center"
        android:hint="Enter password"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLength="20">
        <requestFocus />
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/txtPasswordConfirm"
        android:padding="20dp"
        android:textSize="20dp"
        android:fontFamily="@font/icielbccubano"
        android:textAlignment="center"
        android:hint="Enter password confirm"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLength="20">
    </EditText>

    <TextView
        android:id="@+id/txvDeleteAlbum"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:text="Maximum length: 20"
        android:textAlignment="center"
        android:textColor="@color/red_deep"
        android:fontFamily="@font/icielbccubano"/>

</LinearLayout>